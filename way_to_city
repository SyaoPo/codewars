import itertools


def choose_best_sum(t, k, ls):
    ls_sort = sorted(ls, reverse=True)
    res = []
    for i in ls_sort:
        if i > t:
            ls_sort.remove(i)
    if sum(ls_sort[-k:]) > t:
        return None
    for j in itertools.permutations(ls_sort, k):
        res.append(j)
    res = set(res)
    for elem in res:
        if sum(elem) == t:
            return t
            
          
